<%if user_signed_in? %>
  <h6>Signed in successfully</h6>
<% else %>
  redirect_to sign_in_path
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
      <%= image_tag(current_user.profile_image.attached? ? current_user.profile_image : "no_image.jpg", size: "100x100") %>

      <table class="table mt-3">
        <tbody>
          <tr>
            <th>Name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>

      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block mb-3" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <h2>New Book</h2>
      <%= form_with model: Book.new, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
            <td>
              <%= image_tag(book.user.profile_image.attached? ? book.user.profile_image : "no_image.jpg", size: "100x100") %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "本当に消しますか?" }, class: "btn btn-sm btn-outline-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
