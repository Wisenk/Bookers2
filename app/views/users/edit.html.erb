<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local: true do |form| %>

    <% if @user.errors.any? %>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <div class="form-group">
      <label for="user_name">Name</label>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="user_profile_image">Image</label>
      <%= form.file_field :profile_image, class: "form-control-file" %>
    </div>
    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= form.text_area :introduction, class: "form-control" %>
    </div>
  <%= form.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
  </div>
  </div>
</div>

   