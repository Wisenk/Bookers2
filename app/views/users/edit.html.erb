<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model: @user, local: true do |form| %>
  
    <div class="form-group">
      <label for="user_name">Name</label>
      <%= form.text_field :name, class: "form-control", value: current_user.name %>
    </div>

    <div class="form-group">
      <label for="user_profile_image">Image</label>
      <%= form.file_field :profile_image, class: "form-control-file" %>
    </div>
    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= form.text_area :introduction, class: "form-control", value: current_user.introduction %>
    </div>
  <%= form.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
  </div>
  </div>
</div>

   